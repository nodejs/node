  "files": [
    "bin/",
    "lib/"
  ],
  "main": "lib/index.js",
  "bin": {
    "arborist": "bin/index.js"
  },
  "tap": {
    "after": "test/fixtures/cleanup.js",
    "test-env": [
      "LC_ALL=sk"
    ],
    "timeout": "720",
    "nyc-arg": [
      "--exclude",
      "tap-snapshots/**"
    ]
  },
  "engines": {
    "node": "^20.17.0 || >=22.9.0"
  },
