  macro ElementsKindTestHelper1(kind: constexpr ElementsKind): bool {
    if constexpr (
        (kind == ElementsKind::UINT8_ELEMENTS) ||
        (kind == ElementsKind::UINT16_ELEMENTS)) {
      return true;
    } else {
      return false;
    }
  }

  macro ElementsKindTestHelper2(kind: constexpr ElementsKind): constexpr bool {
    return (
        (kind == ElementsKind::UINT8_ELEMENTS) ||
        (kind == ElementsKind::UINT16_ELEMENTS));
  }

