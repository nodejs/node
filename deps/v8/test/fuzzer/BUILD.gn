import("../../gni/v8.gni")

group("v8_fuzzer") {
  testonly = true

  data_deps = [
    "../..:v8_fuzzers",
    "../../tools:v8_testrunner",
  ]

  data = [
    "./fuzzer.status",
    "./testcfg.py",
    "./inspector/",
    "./json/",
    "./parser/",
    "./regexp/",
    "./regexp_builtins/",
  ]

  if (v8_enable_webassembly) {
    data += [
      "./multi_return/",
      "./wasm/",
      "./wasm_async/",
      "./wasm_code/",
      "./wasm_compile/",
    ]
  }
}
