import("../../gni/v8.gni")

v8_source_set("inspector_test") {
  sources = [
    "frontend-channel.h",
    "isolate-data.cc",
    "isolate-data.h",
    "task-runner.cc",
    "task-runner.h",
    "tasks.cc",
    "tasks.h",
    "utils.cc",
    "utils.h",
  ]

  configs = [ "../..:internal_config_base" ]

  public_deps = [
    "../..:v8",
    "../..:v8_libbase",
    "../..:v8_libplatform",
    "../..:v8_wrappers",
    "../../src/inspector:inspector_test_headers",
  ]
}

v8_executable("inspector-test") {
  testonly = true

  sources = [ "inspector-test.cc" ]

  configs = [
    "../..:external_config",
    "../..:internal_config_base",
  ]

  deps = [
    ":inspector_test",
    "//build/win:default_exe_manifest",
  ]

  data_deps = [ "../../tools:v8_testrunner" ]

  data = [
    "console/",
    "counters/",
    "cpu-profiler/",
    "debugger/",
    "heap-profiler/",
    "inspector.status",
    "protocol-test.js",
    "runtime/",
    "runtime-call-stats/",
    "sessions/",
    "testcfg.py",
    "type-profiler/",
    "wasm-inspector-test.js",
  ]

  cflags = []
  ldflags = []
}
