        server2 => { },
        client => {
            extra => {
                "NPNProtocols" => "foo,bar",
                "ServerName" => "server2",
            },
        },
        test => {
             "ExpectedServerName" => "server2",
             "ExpectedNPNProtocol" => undef,
        },
    },
    {
        name => "alpn-preferred-over-npn",
        server => {
            extra => {
                "ALPNProtocols" => "foo",
                "NPNProtocols" => "bar",
            },
        },
        client => {
            extra => {
                "ALPNProtocols" => "foo",
                "NPNProtocols" => "bar",
            },
        },
        test => {
            "ExpectedALPNProtocol" => "foo",
            "ExpectedNPNProtocol" => undef,
        },
    },
    {
        name => "sni-npn-preferred-over-alpn",
