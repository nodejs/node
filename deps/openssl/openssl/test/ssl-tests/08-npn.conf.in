        name => "npn-no-client-support",
        server => {
            extra => {
                "NPNProtocols" => "foo",
            },
        },
        client => { },
        test => {
            "ExpectedNPNProtocol" => undef,
        },
    },
    {
        name => "npn-with-sni-no-context-switch",
        server => {
            extra => {
                "NPNProtocols" => "foo",
                "ServerNameCallback" => "IgnoreMismatch",
            },
        },
        server2 => {
            extra => {
                "NPNProtocols" => "bar",
            },
        },
        client => {
            extra => {
                "NPNProtocols" => "foo,bar",
                "ServerName" => "server1",
