{
  "compilerOptions": {
    "lib": ["es2022"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "es6",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules"]
}
